{
    "manifest_version": 2,
    "name": "playstop",
    "version": "1.1.0",
    "description": "Пауза миксов и радио, играющих с promodj.com, видео с youtube.com и радио с tunein.com",

    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": [
            "jquery-2.0.3.min.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "imgs/19.png",
            "38": "imgs/38.png"
        }
    },

    "icons": {
        "16": "imgs/16.png",
        "48": "imgs/48.png",
        "128": "imgs/128.png"
    },

    "content_scripts": [
        {
            "matches": [
              "http://promodj.com/*",
              "http://*.youtube.com/*",
              "http://tunein.com/*"
            ],
            "js": ["jquery-2.0.3.min.js", "content.js"],
            "run_at": "document_end",
            "all_frames":true
        }
    ],

    "web_accessible_resources": [
        "inject.js"
    ]
}
